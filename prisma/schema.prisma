generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id             String        @id @default(cuid())
  name           String        @unique
  image          String?
  description    String?
  tax_applicable Boolean       @default(false)
  tax_percentage Float           @default(0)
  is_active      Boolean       @default(true)
  subcategories  Subcategory[]
  items          Item[]        // Items that belong directly to a Category
  createdAt      DateTime      @default(now()) @db.Timestamptz(3)
  updatedAt      DateTime      @updatedAt @db.Timestamptz(3)
}

model Subcategory {
  id             String    @id @default(cuid())
  categoryId     String
  category       Category  @relation(fields: [categoryId], references: [id])
  name           String
  image          String?
  description    String?
  is_active      Boolean   @default(true)
  tax_applicable Boolean?
  tax_percentage Float?
  
  items          Item[]    // Items that belong to a Subcategory
  createdAt      DateTime  @default(now()) @db.Timestamptz(3)
  updatedAt      DateTime  @updatedAt @db.Timestamptz(3)

  @@unique([categoryId, name])
}

model Item {
  id             String       @id @default(cuid())
  name           String       
  description    String?
  image          String?
  is_active      Boolean      @default(true)
  categoryId     String?
  category       Category?    @relation(fields: [categoryId], references: [id])
  subcategoryId  String?
  subcategory    Subcategory? @relation(fields: [subcategoryId], references: [id])
  base_price     Float?
  type_of_pricing String?     // e.g., A means 'STATIC', B means 'TIERED', etc.
  price_config   Json?         
  tax_applicable Boolean?
  tax_percentage Int?
  avl_days       String[]     
  avl_times      Json?        // e.g., [{"start": "08:00", "end": "11:00"}]
  createdAt      DateTime     @default(now()) @db.Timestamptz(3)
  updatedAt      DateTime     @updatedAt @db.Timestamptz(3)
}

